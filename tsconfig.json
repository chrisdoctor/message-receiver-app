{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    // "module": "ESNext",
    // "moduleResolution": "Bundler",
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
